<section id="hero-container" class="px-5 relative min-h-[90vh] flex justify-center items-center">
    <div data-sky-grad="night" class="overflow-hidden absolute z-0 inset-0 transition-opacity duration-500 night"></div>
    <div data-sky-grad="evening" class="overflow-hidden absolute z-0 inset-0 transition-opacity duration-500 evening"></div>
    <div data-sky-grad="morning" class="overflow-hidden absolute z-0 inset-0 transition-opacity duration-500 morning"></div>
    <div class="overflow-hidden absolute z-0 inset-0">
        <button type="button" id="theme-btn" class="absolute h-16 w-16 rounded-full top-[10%] left-[10%] text-[#fff6e2] bg-current transition-colors duration-500 shadow-[0px_0px_80px_0px] shadow-current origin-center select-none click-bait" aria-label="Theme toggle button"></button>
    </div>
    <div class="overflow-x-hidden absolute z-0 bottom-0 w-full">
        <div class="grid grid-cols-[repeat(2,100%)] min-w-[80rem] clouds">
            <img src="/assets/images/clouds.svg" height="318" width="1713" class="w-full min-w-[80rem] object-cover select-none" alt="clouds">
            <img src="/assets/images/clouds.svg" height="318" width="1713" class="w-full min-w-[80rem] object-cover select-none" alt="clouds">
        </div>
    </div>
    <div class="overflow-x-hidden absolute z-0 bottom-0 w-full flex justify-center">
        <img src="/assets/images/beach.svg" height="148" width="1755" class="w-full min-w-[80rem] object-cover select-none" alt="beach background">
    </div>
    <div class="z-0 max-w-[60rem] mx-auto my-16 text-center transition-colors duration-500">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl dark:text-[#d6efee] font-bold mb-16 md:leading-[1.2] lg:leading-[1.2]">I'll Turn Your Boring Website Into A Stunning Web Experience That Takes &lt;1s To Load</h1>
        <a href="#contact" class="px-10 py-5 font-medium md:py-6 rounded-full text-lg md:text-xl text-gray-50 bg-black dark:text-[#042122] dark:bg-[#d6efee] uppercase">Contact</a>
    </div>
</section>
<section class="px-5 bg-black text-slate-50">
