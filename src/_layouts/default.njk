<!DOCTYPE html>
<html lang="{{ site.lang }}" class="scroll-smooth">
<head>
    <title>{{ title if title else site.title }}</title>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{ description if description else site.description }}">
    <meta name="keywords" content="{{ keywords if keywords else site.keywords }}">
    <meta name="author" content="{{ author.name if author.name else site.author.name }}">

    <meta name="twitter:creator" content="{{ author.twitter if author.twitter else site.author.twitter }}">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:url" content="{{ site.url + page.url }}">
    <meta name="twitter:title" content="{{ title if title else site.title }}">
    <meta name="twitter:description" content="{{ description if description else site.description }}">
    <meta name="twitter:image" content="{{ site.url + (image if image else site.image) }}">

    <meta property="og:url" content="{{ site.url + page.url }}">
    <meta property="og:type" content="{{ type if type else site.type }}">
    <meta property="og:title" content="{{ title if title else site.title }}">
    <meta property="og:image" content="{{ site.url + (image if image else site.image) }}">
    <meta property="og:description" content="{{ description if description else site.description }}">
    <meta property="og:site_name" content="{{ site.name }}">
    <meta property="og:locale" content="{{ site.lang }}">

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-6SBMZF1LGX"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-6SBMZF1LGX');
    </script>

    <link rel="shortcut icon" href="{{ site.favicon }}" type="image/x-icon">

    <link rel="preload" href="/assets/images/beach.svg" as="image">
    <link rel="preload" href="/assets/images/clouds.svg" as="image">
    <link rel="preload" href="/assets/fonts/rock-salt.woff2" as="font" crossorigin>
    
    <link rel="stylesheet" href="/styles.css">
</head>
<body class="overflow-y-scroll">
    {{ content | safe }}
    
    <script src="/main.js" async></script>
</body>
</html>